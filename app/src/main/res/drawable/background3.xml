<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The bottom layer is blue -->
    <item>
        <shape>
            <solid android:color="@color/theme_blue" />
            <size android:height="200dp"
                android:width="200dp" />
        </shape>
    </item>

    <!-- The top later is rounded lightblue -->
    <item
        android:top="160dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/theme_lightblue" />
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"
                />
        </shape>
    </item>
</layer-list>